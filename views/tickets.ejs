<!DOCTYPE html>
<html>
<head>
  <link type="text/css" rel="stylesheet" href="./main.css">
  <style>
    table{
      width: 100%;
    }
    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
      text-align: center;
    }
  </style>
</head>
  <body>
    <h1>Tickets</h1>
    <table>
      <tr>
        <th>Time</th>
        <th>UUID</th>
        <th>Item</th>
        <th>Member</th>
        <th>Description</th>
        <th>Picture</th>
        <th>Assigned</th>
        <th>Resolved</th>
        <th>Delete</th>
      </tr>
      <% tickets.forEach(function(ticket, index) { %>
        <tr>
          <td><%= ticket.time %></td>
          <td><%= ticket.uuid %></td>
          <td><%= ticket.item %></td>
          <td><%= ticket.member %></td>
          <td><%= ticket.description %></td>
          <td><%= ticket.picture %></td>
          <td><%= ticket.assigned %></td>
          <td>
            <form action="/tickets/resolved/<%= ticket.uuid %>" method="update">
              <input type="submit" value= "<%= ticket.resolved %>" />
            </form>
            <%= ticket.resolved %></td>
          <td>
            <form action="/tickets/delete/<%= ticket.uuid %>" method="delete">
              <input type="submit" value = "DELETE"/>
            </form>
          </td>
        </tr>
      <% }); %>
    </table>
  </body>
</html>
